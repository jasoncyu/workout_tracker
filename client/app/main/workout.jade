div(ng-include='"components/navbar/navbar.html"')

.container(ng-click='stopEditing')
  .row
    .col-lg-12
      h1.page-header Workout
      div(ng-repeat='lift in lifts')
        h2 {{lift.name}}
        .setIndex.header Set
        .weight.header Weight
        .reps.header Reps
        .liftSetCont(ng-repeat='liftSet in lift.sets')
          .liftSet(ng-if='liftSet.isEditing')
            input.setIndex(type='text', ng-model='liftSet.setIndex', ng-blur='toggleEditing(liftSet)')
            input.weight(type='text', ng-model='liftSet.weight')
            input.reps(type='text', ng-model='liftSet.reps')
          .liftSet(ng-if='!liftSet.isEditing',
                   ng-click='toggleEditing(liftSet)')
            .setIndex {{liftSet.setIndex}}
            .weight {{liftSet.weight}}
            .reps {{liftSet.reps}}
